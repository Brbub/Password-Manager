{
"manifest_version": 2,

"name": "Password Manager",

"description": "An easy way to store your password!" ,

"version": "1.0.0",

"icons": {"128": "icon_128.png"},

"browser_action":{
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    },

"permissions": ["https://*.google.com/", "activeTab", "storage", "topSites"],

"background":{
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"

      ],

      "js": ["popup.js", "js/red.js", "js/blue.js", "js/green.js", "js/yellow.js"]
    }


  ]
  
}